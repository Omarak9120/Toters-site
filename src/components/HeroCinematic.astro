        {locale === 'ar' ? 'Ø§Ù„ÙˆØµÙˆÙ„ Ø®Ù„Ø§Ù„ 7 Ø¯Ù‚Ø§Ø¦Ù‚' : 'Arriving in 7 min'}
      </div>
    </div>
  </div>
</section>

<script type="module">
  const root = document.querySelector("[data-hero-root]") as HTMLElement | null;
  if (root) {
    import("./heroCinematicMotion.ts").then(m => m.initHeroCinematic(root));
  }
</script>
