---
import Base from "../../layouts/Base.astro";
import JobDetail from "../../components/jobs/JobDetail.astro";
import enJobs from "../../data/jobs/en.json";

export const prerender = true;

export function getStaticPaths() {
  return enJobs.map((job) => ({
    params: { slug: job.slug },
    props: { job },
  }));
}

const { job } = Astro.props;
const title = job.title;
const desc = `${job.team} · ${job.location}`;
---

<Base title={`Toters — ${title}`} description={desc} lang="en" dir="ltr">
  <JobDetail job={job} lang="en" />
</Base>
