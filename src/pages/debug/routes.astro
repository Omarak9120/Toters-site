---
if (!import.meta.env.DEV) {
  return Astro.redirect('/', 302);
}

const pages = Object.keys(import.meta.glob('/src/pages/**/*.{astro,md,mdx}', { eager: false }));
---
<section class="container mx-auto p-6">
  <h1 class="h1">Route Debug</h1>
  <ul class="mt-4 text-sm space-y-1">{pages.map(p => <li>{p}</li>)}</ul>
</section>