---
import Base from "../../layouts/Base.astro";

const pages = Object.keys(import.meta.glob('/src/pages/**/*.{astro,md,mdx}', { eager: false }));
---

<Base title="Route Debug — Toters" description="Debug page to check available routes" lang="en" dir="ltr">
  <section class="container mx-auto p-6">
    <h1 class="h1">Route Debug</h1>
    <p class="text-slate-600 mt-2">Available pages in the project:</p>
    
    <ul class="mt-4 space-y-1 text-sm font-mono">
      {pages.map(p => <li class="text-slate-700">{p}</li>)}
    </ul>

    <div class="mt-6 p-4 bg-slate-50 rounded-lg">
      <h2 class="font-semibold mb-3">Test Careers Routes:</h2>
      <div class="space-x-4">
        <a class="underline text-blue-600 hover:text-blue-800" href="/careers">/careers</a> ·
        <a class="underline text-blue-600 hover:text-blue-800" href="/careers/">/careers/</a> ·
        <a class="underline text-blue-600 hover:text-blue-800" href="/ar/careers">/ar/careers</a> ·
        <a class="underline text-blue-600 hover:text-blue-800" href="/ar/careers/">/ar/careers/</a>
      </div>
      
      <div class="mt-3 space-x-4">
        <a class="underline text-blue-600 hover:text-blue-800" href="/careers/junior-frontend-engineer">/careers/junior-frontend-engineer</a> ·
        <a class="underline text-blue-600 hover:text-blue-800" href="/ar/careers/junior-frontend-engineer">/ar/careers/junior-frontend-engineer</a>
      </div>
    </div>
  </section>
</Base>
