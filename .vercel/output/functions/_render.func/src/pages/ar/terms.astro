---
import Base from '../../layouts/Base.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const locale = 'ar';
const currentPath = '/ar/terms';
const lastUpdated = '2024-01-15';
---

<Base 
  title="شروط الخدمة - توترز" 
  description="اقرأ شروط الخدمة لاستخدام منصة توصيل توترز."
  lang="ar"
  dir="rtl"
>
  <Header locale={locale} currentPath={currentPath} />

  <main class="min-h-screen bg-white">
    <div class="max-w-4xl mx-auto px-4 py-16">
      <h1 class="text-4xl font-bold text-gray-900 mb-8">شروط الخدمة</h1>
      
      <div class="text-sm text-gray-600 mb-8">
        آخر تحديث: {lastUpdated}
      </div>

      <div class="prose prose-lg max-w-none">
        <section class="mb-8">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">قبول الشروط</h2>
          <p class="text-gray-700 mb-4">
            بالوصول إلى توترز واستخدامها، تقبل وتوافق على الالتزام بشروط وأحكام هذه الاتفاقية.
          </p>
          <!-- TODO: فريق القانون لمراجعة آلية القبول والإنفاذ -->
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">ترخيص الاستخدام</h2>
          <p class="text-gray-700 mb-4">
            يُمنح الإذن لاستخدام توترز مؤقتاً للعرض الشخصي وغير التجاري المؤقت فقط.
          </p>
          <p class="text-gray-700 mb-4">
            هذا منح لترخيص، وليس نقل ملكية، وتحت هذا الترخيص لا يجوز لك:
          </p>
          <ul class="list-disc list-inside text-gray-700 mb-4">
            <li>تعديل أو نسخ المواد</li>
            <li>استخدام المواد لأي غرض تجاري أو لأي عرض عام</li>
            <li>محاولة الهندسة العكسية لأي برنامج موجود على الموقع</li>
            <li>إزالة أي حقوق طبع ونشر أو رموز ملكية أخرى من المواد</li>
          </ul>
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">توفر الخدمة</h2>
          <p class="text-gray-700 mb-4">
            نسعى لتقديم خدمة موثوقة، لكن لا يمكننا ضمان الوصول غير المنقطع. 
            قد تكون الخدمة غير متاحة مؤقتاً بسبب الصيانة أو التحديثات أو المشاكل التقنية.
          </p>
          <!-- TODO: فريق القانون لتحديد SLA والتزامات مستوى الخدمة -->
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">مسؤوليات المستخدم</h2>
          <p class="text-gray-700 mb-4">
            أنت مسؤول عن:
          </p>
          <ul class="list-disc list-inside text-gray-700 mb-4">
            <li>تقديم معلومات دقيقة وكاملة</li>
            <li>الحفاظ على أمان حسابك</li>
            <li>الامتثال لجميع القوانين واللوائح المعمول بها</li>
            <li>احترام حقوق المستخدمين الآخرين والأطراف الثالثة</li>
          </ul>
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">شروط الدفع</h2>
          <p class="text-gray-700 mb-4">
            الدفع للخدمات مستحق في وقت وضع الطلب. نقبل طرق دفع مختلفة كما هو معروض أثناء الدفع.
          </p>
          <!-- TODO: فريق القانون لتحديد سياسة الاسترداد ومعالجة الدفع وحل النزاعات -->
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">تحديد المسؤولية</h2>
          <p class="text-gray-700 mb-4">
            في أي حال من الأحوال، لا تكون توترز أو موردوها مسؤولين عن أي أضرار ناشئة 
            عن استخدام أو عدم القدرة على استخدام المواد على توترز.
          </p>
          <!-- TODO: فريق القانون لتحديد حدود المسؤولية والاستثناءات -->
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">القانون الحاكم</h2>
          <p class="text-gray-700 mb-4">
            تحكم هذه الشروط والأحكام وتفسر وفقاً لقوانين [الاختصاص القضائي] 
            وتخضع بشكل لا رجوع فيه للاختصاص الحصري للمحاكم في تلك الولاية أو الموقع.
          </p>
          <!-- TODO: فريق القانون لتحديد القانون الحاكم والاختصاص القضائي -->
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">معلومات الاتصال</h2>
          <p class="text-gray-700 mb-4">
            إذا كان لديك أي أسئلة حول شروط الخدمة هذه، يرجى الاتصال بنا على:
          </p>
          <p class="text-gray-700">
            البريد الإلكتروني: legal@totersapp.com<br>
            <!-- TODO: إضافة العنوان الفعلي وتفاصيل الاتصال الأخرى -->
          </p>
        </section>
      </div>
    </div>
  </main>

  <Footer locale={locale} />
</Base>
